{
  "name": "${CONNECTOR_NAME}",
  "config":
  {
    "auto.create.indices.at.start": false,
    "connector.class": "io.aiven.kafka.connect.opensearch.OpensearchSinkConnector",
    "tasks.max": "10",
    "topics": "${TOPIC_NAME}",
    "connection.url": "${ELASTICSEARCH_URL}",
    "connection.username": "${ELASTICSEARCH_LOGIN}",
    "connection.password": "${ELASTICSEARCH_PASSWORD}",
    "type.name": "bddBenef",
    "key.ignore": false,
    "schema.ignore": true,
    "behavior.on.null.values": "delete",
    "drop.invalid.message": true,
    "behavior.on.malformed.documents": "warn",
    "behavior.on.version.conflict": "warn",
    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "false",
    "transforms": "ReplaceField,createKey,extractKey,changeTopicName",
    "transforms.ReplaceField.type": "org.apache.kafka.connect.transforms.ReplaceField$Value",
    "transforms.ReplaceField.blacklist": "_id",
    "transforms.createKey.type": "org.apache.kafka.connect.transforms.ValueToKey",
    "transforms.createKey.fields": "key",
    "transforms.extractKey.type": "org.apache.kafka.connect.transforms.ExtractField$Key",
    "transforms.extractKey.field": "key",
    "transforms.changeTopicName.type": "org.apache.kafka.connect.transforms.RegexRouter",
    "transforms.changeTopicName.regex": "${TOPIC_NAME}*",
    "transforms.changeTopicName.replacement": "${INDEX_NAME}",
    "linger.ms": "1000",
    "batch.size" : "2000",
    "max.buffered.records": "20000",
    "max.in.flight.requests": "10"
  }
}
